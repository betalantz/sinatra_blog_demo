<h2>Express yourself!</h2>

<% if @post && @post.errors.any? %>
    <% @post.errors.full_messages.each do |msg| %>
        <p class="error"><%= msg %></p>
    <% end %>
<% end %>

<form action="/posts" method='post'>
    <input type="text" name="content" placeholder="Your blog entry">
    <input type="submit">
</form>